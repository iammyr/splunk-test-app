<form>
  <label>Filesystem Access</label>
  <description>Foo Bar Baz</description>
  <fieldset submitButton="false" autoRun="true">
    <input type="dropdown" token="file_subcategory" searchWhenChanged="true">
      <label>Select sub category</label>
      <choice value="Read">Read</choice>
      <choice value="Write">Write</choice>
      <choice value="Exec">Exec</choice>
      <default>Read</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Top Directories ($file_subcategory$)</title>
        <searchString>sourcetype=jaf rule_category=File rule_subcategory=$file_subcategory$ | rex field=rule_data "(?&lt;dirname&gt;/.*/)(?&lt;basename&gt;.*)" | top limit=20 dirname</searchString>
        <earliestTime>0</earliestTime>
        <latestTime/>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Top Paths ($file_subcategory$)</title>
        <searchString>sourcetype=jaf rule_category=File rule_subcategory=$file_subcategory$ | rename rule_data as file_path | top limit=20 file_path</searchString>
        <earliestTime>0</earliestTime>
        <latestTime/>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Top Files ($file_subcategory$)</title>
        <searchString>sourcetype=jaf rule_category=File rule_subcategory=$file_subcategory$ | rex field=rule_data "(?&lt;dirname&gt;/.*/)(?&lt;basename&gt;.*)" | top limit=20 basename</searchString>
        <earliestTime>0</earliestTime>
        <latestTime/>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>